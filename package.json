{
  "name": "release-commit",
  "description": "Commit (and tag) a release with automatic CHANGELOG.md and DEPENDENCIES.md updates",
  "version": "1.0.2",
  "author": "Greg Twardowski (https://github.com/tvardy)",
  "bin": {
    "release-commit": "./index.js"
  },
  "dependencies": {
    "chalk": "2.3.0",
    "commander": "2.12.2",
    "conventional-recommended-bump": "1.1.0",
    "execa": "0.8.0",
    "generate-changelog": "1.7.0",
    "graceful-fs": "4.1.11",
    "package-json-to-readme": "2.1.0",
    "when": "3.7.8"
  },
  "devDependencies": {
    "cz-conventional-changelog": "2.1.0",
    "xo": "0.18.2"
  },
  "issues": "https://github.com/tvardy/release-commit/issues",
  "keywords": [
    "changelog",
    "dependencies",
    "generate",
    "commit",
    "deploy",
    "git",
    "log",
    "release",
    "workflow"
  ],
  "license": "MIT",
  "main": "./index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/tvardy/release-commit.git"
  },
  "scripts": {
    "release": "node index -t",
    "lint": "xo --fix"
  },
  "xo": {
    "envs": [
      "node"
    ],
    "esnext": false,
    "space": 2
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
