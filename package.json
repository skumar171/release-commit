{
  "name": "release-commit",
  "description": "Commit (and tag) a release with automatic CHANGELOG.md and DEPENDENCIES.md updates",
  "version": "0.9.0",
  "contributors": [
    "Greg Twardowski (https://github.com/tvardy)",
    "Jamie Mason (https://github.com/JamieMason)"
  ],
  "bin": {
    "release-commit": "./index.js"
  },
  "dependencies": {
    "chalk": "1.1.3",
    "commander": "2.9.0",
    "conventional-recommended-bump": "0.3.0",
    "execa": "0.5.0",
    "generate-changelog": "1.2.1",
    "graceful-fs": "4.1.11",
    "package-json-to-readme": "1.5.1",
    "when": "3.7.7"
  },
  "devDependencies": {
    "cz-conventional-changelog": "2.0.0",
    "eslint": "3.19.0",
    "xo": "0.17.1"
  },
  "issues": "https://github.com/tvardy/release-commit/issues",
  "keywords": [
    "changelog",
    "dependencies",
    "generate",
    "commit",
    "deploy",
    "git",
    "log",
    "release",
    "workflow"
  ],
  "license": "MIT",
  "main": "./index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/tvardy/release-commit.git"
  },
  "scripts": {
    "lint": "xo --fix"
  },
  "xo": {
    "envs": [
      "node"
    ],
    "esnext": false,
    "space": 2
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
